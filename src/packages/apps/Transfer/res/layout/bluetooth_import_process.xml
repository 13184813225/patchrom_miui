<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="@dimen/padding_right"
        android:background="?android:attr/dividerHorizontal" />

    <TextView
        android:id="@+id/check_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="30dip"
        android:text="@string/checkhint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/progressbar_contact"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="20dip"
            android:max="100" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="5dip" >

            <TextView
                android:id="@+id/in_import"
                android:layout_width="@dimen/width_contact_import_name"
                android:layout_height="@dimen/height_contact_import_name"
                android:gravity="center" />

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="@dimen/width_contact_import_name"
                android:layout_height="@dimen/height_contact_import_name"
                android:layout_marginLeft="1dip"
                android:layout_toRightOf="@+id/in_import"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@string/import_name" />

            <TextView
                android:id="@+id/progress_percent"
                android:layout_width="@dimen/width_contact_import_name"
                android:layout_height="@dimen/height_contact_import_name"
                android:layout_marginLeft="1dip"
                android:layout_toRightOf="@+id/contact_name"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:gravity="center"
            android:text="@string/hint_distance"
            android:textAppearance="@miui:style/TextAppearance.ListView.PrimaryItem" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:text="@string/hint_more_contact"
            android:textAppearance="@miui:style/TextAppearance.ListView.PrimaryItem" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/padding_left"
            android:layout_marginRight="@dimen/padding_right"
            android:layout_marginTop="10dip"
            android:background="?android:attr/dividerHorizontal" />

        <Button
            android:id="@+id/cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel" >
        </Button>
    </LinearLayout>

</LinearLayout>