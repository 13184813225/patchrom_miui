<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="@dimen/padding_right"
        android:background="?android:attr/dividerHorizontal" />

    <TextView
        android:id="@+id/provider_bluetooth_phone_operator_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin_left_boundary"
        android:layout_marginTop="24dip"
        android:gravity="left"
        android:text="@string/operator_phone_unprovider_bt" />

    <TextView
        android:id="@+id/provider_bluetooth_phone_operator_text"
        android:textAppearance="@miui:style/TextAppearance.ListView.PrimaryItem"
        android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/text_margin_left_boundary"
        android:layout_marginRight="@dimen/text_margin_right_boundary"
        android:lineSpacingExtra="2dip"
        android:gravity="left" />

</LinearLayout>