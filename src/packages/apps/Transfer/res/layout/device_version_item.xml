<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/version_item_relativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/version_item_height" >

    <TextView
        android:id="@+id/version_title"
        android:layout_marginLeft="@dimen/text_in_list_margin_boundary"
        android:layout_marginRight="@dimen/text_in_list_margin_boundary"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/version_item_height"
        android:textAppearance="@miui:style/TextAppearance.ListView.PrimaryItem"
        android:gravity="center_vertical" />

    <RadioButton
        android:id="@android:id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/version_item_height"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical" />

</RelativeLayout>