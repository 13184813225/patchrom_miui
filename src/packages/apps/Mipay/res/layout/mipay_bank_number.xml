<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="13dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="15dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mipay_bank_card_hint"
            android:textColor="@color/mipay_text_color_gray"
            android:textSize="@dimen/mipay_text_size_medium" />

        <EditText
            android:id="@+id/card_num"
            style="@style/Mipay.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:digits="0123456789 "
            android:gravity="center_vertical"
            android:inputType="number"
            android:maxLength="25" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="@string/mipay_bank_card_safe_info"
            android:textColor="@color/mipay_text_color_gray"
            android:textSize="@dimen/mipay_text_size_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/bank_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/mipay_bank_card_support_list"
            android:textColor="@color/mipay_text_color_gray"
            android:textSize="@dimen/mipay_text_size_small" />

        <com.mipay.common.component.ProgressButton
            android:id="@+id/button"
            style="@miui:style/V5.Widget.Button.PositiveWarn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="@string/mipay_button_next" />
    </LinearLayout>

</ScrollView>