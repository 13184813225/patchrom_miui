<?xml version="1.0" encoding="utf-8"?>
<PreferenceGroup
        xmlns:camera="http://schemas.android.com/apk/res/com.android.camera">
    <IconListPreference
            camera:key="pref_camera_panoramamode_key"
            camera:title="@string/pref_camera_panoramamode_title"
            camera:singleIcon="@drawable/ic_camera_simple_mode_panorama" />
    <IconListPreference
            camera:key="pref_camera_ae_bracket_hdr_key"
            camera:title="@string/pref_camera_ae_bracket_hdr_title"
            camera:singleIcon="@drawable/ic_camera_simple_mode_hdr"/>
    <IconListPreference
            camera:key="pref_camera_hand_night_key"
            camera:title="@string/pref_camera_hand_night_title"
            camera:singleIcon="@drawable/ic_camera_simple_mode_hand_night"/>
    <IconListPreference
            camera:key="pref_camera_coloreffect_key"
            camera:defaultValue="@string/pref_camera_coloreffect_default"
            camera:title="@string/pref_camera_coloreffect_title_simple_mode"
            camera:entries="@array/pref_camera_coloreffect_entries"
            camera:singleIcon="@drawable/ic_camera_simple_mode_coloreffect"
            camera:largeIcons="@array/camera_coloreffect_largeIcons"
            camera:entryValues="@array/pref_camera_coloreffect_entryvalues" />
    <IconListPreference
            camera:key="pref_audio_capture"
            camera:title="@string/pref_camera_audio_capture_title"
            camera:singleIcon="@drawable/ic_camera_simple_mode_audio_capture" />
    <IconListPreference
            camera:key="pref_settings"
            camera:title="@string/pref_camera_settings_title"
            camera:singleIcon="@drawable/ic_camera_simple_mode_setting" />
   <IconListPreference
            camera:key="pref_camera_id_key"
            camera:defaultValue="@string/pref_camera_id_default"
            camera:title="@string/pref_camera_id_title"/>
</PreferenceGroup>