            android:persistent="false"
            android:key="pref_camera_storage_external"
            android:defaultValue="@string/pref_camera_storage_external_default"
            android:title="@string/pref_camera_storage_external_title"
            android:entries="@array/pref_camera_storage_external_entries"
            android:entryValues="@array/pref_camera_storage_external_entryvalues" />
