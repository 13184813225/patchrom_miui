    <PreferenceCategory
        android:key="category_picture_size_quality"
        android:title="@string/pref_grp_picture_settings" >
        <com.android.camera.ui.PreviewListPreference
            android:defaultValue="@string/pref_camera_picture_size_default"
            android:entries="@array/pref_camera_picturesize_entries"
            android:entryValues="@array/pref_camera_picturesize_entryvalues"
            android:key="pref_camera_picturesize_key"
            android:persistent="false"
            android:title="@string/pref_camera_picturesize_title_simple_mode" />
