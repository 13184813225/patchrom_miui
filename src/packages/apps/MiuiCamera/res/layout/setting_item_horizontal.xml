<?xml version="1.0" encoding="utf-8"?>
<com.android.camera.ui.PopupMenuItem xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/SettingColumn">
    <ImageView android:id="@+id/image"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:layout_marginLeft="@dimen/simple_mode_color_effect_margin"
            android:layout_marginRight="@dimen/simple_mode_color_effect_margin"
            android:layout_marginTop="@dimen/simple_mode_color_effect_margin"
            android:layout_marginBottom="@dimen/simple_mode_color_effect_margin"/>
    <TextView android:id="@+id/text"
            style="@style/SettingItemTitleColumn"
            android:layout_alignBottom="@id/image"
            android:layout_centerHorizontal="true"/>
</com.android.camera.ui.PopupMenuItem>
