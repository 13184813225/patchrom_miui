<?xml version="1.0" encoding="utf-8"?>

<com.android.camera.ui.SettingPopupK xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/SettingPopupWindow">

    <LinearLayout android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:id="@+id/title"
                      style="@style/PopupTitleText"
                      android:text="@string/pref_camera_whitebalance_k_value_title"/>
        </FrameLayout>

        <View style="@style/PopupTitleSeperator" />
        <LinearLayout
                style="@style/SettingItemList"
                android:clickable="true">
            <TextView
                android:id="@+id/k_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingTop="24dp"
                android:gravity="center_horizontal"
                android:text="@string/pref_camera_current_k_value"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >
                <ImageView
                    android:id="@+id/k_reduce"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/ic_k_value_reduce_selector"/>
                <TextView
                    android:id="@+id/k_value_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/pref_camera_whitebalance_k_value_title"/>
                <ImageView
                    android:id="@+id/k_add"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/ic_k_value_add_selector"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center_horizontal" >
                <ImageView
                    android:id="@+id/k_return"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/ic_k_value_return_selector"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.android.camera.ui.SettingPopupK>
