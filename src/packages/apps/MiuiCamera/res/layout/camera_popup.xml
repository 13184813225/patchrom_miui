<?xml version="1.0" encoding="utf-8"?>
<com.android.camera.ui.SettingPopupView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/control_panel_bottom"
    android:layout_centerHorizontal="true"
    android:visibility="gone">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/setting_grid_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/setting_grid_top_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_camera_popup_top_left"/>
            <ImageView
                android:id="@+id/setting_grid_top_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/ic_camera_popup_top"/>
            <ImageView
                android:id="@+id/setting_grid_top_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_camera_popup_top_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/setting_panel_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_camera_popup_content">
        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:id="@+id/setting_grid_bottom"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <ImageView
                android:id="@+id/setting_grid_bottom_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_camera_popup_bottom_left"/>
            <ImageView
                android:id="@+id/setting_grid_bottom_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/ic_camera_popup_bottom_middle"/>
            <ImageView
                android:id="@+id/setting_grid_bottom_anchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_camera_popup_bottom_anchor"/>
            <ImageView
                android:id="@+id/setting_grid_bottom_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_camera_popup_bottom_right"/>
        </LinearLayout>
    </LinearLayout>
    <com.android.camera.ui.SplitLineDrawer
        android:id="@+id/split_line_view"
        android:layout_width="100dp"
        android:layout_height="100dp">
    </com.android.camera.ui.SplitLineDrawer>
</com.android.camera.ui.SettingPopupView>