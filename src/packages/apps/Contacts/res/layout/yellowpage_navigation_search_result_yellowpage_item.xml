<?xml version="1.0" encoding="utf-8"?>
<com.android.contacts.yellowpage.ui.SearchResultYellowPageItem xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/YellowPageNavigationSearchResultItemStyle" >

    <ImageView
        android:id="@+id/photo"
        style="@style/YellowPageNavigationSearchResultItemPhotoStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dialer_photo_right_margin"
        android:layout_toRightOf="@+id/photo"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

           <TextView
               android:id="@+id/name"
               style="@miui:style/V5.TextAppearance.List.Primary"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:singleLine="true"
               android:layout_weight="1"
               android:ellipsize="end" />

           <ImageView
                android:id="@+id/first_service_icon"
                android:layout_width="@dimen/yellowpage_navigation_search_result_service_icon"
                android:layout_height="@dimen/yellowpage_navigation_search_result_service_icon"
                android:layout_marginLeft="@dimen/yellowpage_navigation_search_result_first_service_icon_margin_left"
                android:visibility="gone" />

           <ImageView
                android:id="@+id/second_service_icon"
                android:layout_width="@dimen/yellowpage_navigation_search_result_service_icon"
                android:layout_height="@dimen/yellowpage_navigation_search_result_service_icon"
                android:layout_marginLeft="@dimen/yellowpage_navigation_search_result_next_service_icon_margin_left"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/address"
                style="@miui:style/V5.TextAppearance.List.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/distance"
                android:singleLine="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/distance"
                style="@miui:style/V5.TextAppearance.List.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/yellowpage_navigation_search_result_distance_margin_left"
                android:singleLine="true"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</com.android.contacts.yellowpage.ui.SearchResultYellowPageItem>