<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@miui:dimen/v5_list_view_padding_horizontal"
    android:paddingRight="@miui:dimen/v5_list_view_padding_horizontal"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:orientation="vertical">

    <EditText
        android:id="@+id/station_frequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/input_station"
        android:numeric="decimal"
        android:background="?miui:attr/v5_group_item_bg"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:singleLine="true" />

    <EditText
        android:id="@+id/station_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?miui:attr/v5_group_item_bg"
        android:singleLine="true"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:hint="@string/hint_station_name" />
</LinearLayout>
