<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
     >

    <ImageView
        android:id="@+id/airkan_device_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/airkan_xiaomi_phone_imageview" />

    <TextView
        android:id="@+id/airkan_device_name_textview"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@id/airkan_device_imageview"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/airkan_device_xiaomi_phone"
        android:textSize="12sp" />

</RelativeLayout>