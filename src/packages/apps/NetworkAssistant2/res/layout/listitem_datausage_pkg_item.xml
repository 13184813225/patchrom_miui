<?xml version="1.0" encoding="utf-8"?>
<com.miui.networkassistant.ui.view.DataUsagePkgItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@miui:drawable/v5_preference_item_bg"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="false" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            style="@miui:style/V5.TextAppearance.List.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/subtitle"
            style="@miui:style/V5.TextAppearance.List.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</com.miui.networkassistant.ui.view.DataUsagePkgItem>