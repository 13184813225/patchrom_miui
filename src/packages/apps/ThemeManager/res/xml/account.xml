<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/basic_info">
        <Preference
            android:key="account_info"
            android:title="@string/account_info">
            <intent android:action="android.settings.XIAOMI_ACCOUNT_SYNC_SETTINGS" />
        </Preference>
        <Preference
            android:key="payment_info"
            android:title="@string/payment_info">
            <intent
                android:targetPackage="com.xiaomi.payment"
                android:targetClass="com.xiaomi.payment.MiliCenterEntryActivity" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>
