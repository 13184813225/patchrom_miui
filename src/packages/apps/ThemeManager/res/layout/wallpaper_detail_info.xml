<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dip"
    android:paddingBottom="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@miui:style/ResourceBrowser.ResourceProperty.Title"
            android:text="@miui:string/description_author" />

        <TextView
            android:id="@+id/author"
            style="@miui:style/ResourceBrowser.ResourceProperty.Content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@miui:style/ResourceBrowser.ResourceProperty.Title"
            android:text="@miui:string/description_size" />

        <TextView
            android:id="@+id/size"
            style="@miui:style/ResourceBrowser.ResourceProperty.Content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mark"
            style="@miui:style/ResourceBrowser.ResourceProperty.Title"
            android:text="@miui:string/description_uploadtime" />

        <TextView
            android:id="@+id/modifiedTime"
            style="@miui:style/ResourceBrowser.ResourceProperty.Content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@miui:style/ResourceBrowser.ResourceProperty.Title"
            android:text="@miui:string/description_download" />

        <TextView
            android:id="@+id/downloadCount"
            style="@miui:style/ResourceBrowser.ResourceProperty.Content" />
    </LinearLayout>

</LinearLayout>