<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.ListView.Item.TripleLine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/resource_comment_padding_common"
    android:paddingTop="@dimen/resource_comment_padding_common" >

    <miui.resourcebrowser.view.ExpandableTextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/expandable_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/Resource.Comment.TextAppearance.List.Primary" />
        <TextView
            android:id="@+id/expand_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dip"
            android:text="@string/resource_comment_expand_full_text"
            style="@style/Resource.Comment.TextAppearance.List.Primary" />
    </miui.resourcebrowser.view.ExpandableTextView>

    <RatingBar
        android:id="@+id/ratingbar"
        style="@style/ResourceBrowser.Widget.RatingBar.ReadOnly"
        android:layout_width="wrap_content"
        android:layout_height="23dip"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Resource.Comment.TextAppearance.List.Secondary" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/resource_comment_padding_list_item_horizontal"
            style="@style/Resource.Comment.TextAppearance.List.Secondary" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/resource_comment_padding_list_item_horizontal"
            style="@style/Resource.Comment.TextAppearance.List.Secondary" />
    </LinearLayout>

</LinearLayout>