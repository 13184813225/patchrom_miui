<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/ResourceBrowser.ListItem">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <miui.resourcebrowser.view.AsyncDecodeImageView
            android:id="@+id/thumbnail"
            style="@style/ResourceBrowser.ResourceImage"
            android:paddingBottom="45dip"
            android:background="@drawable/resource_font_bg"
            android:scaleType="fitCenter" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:paddingBottom="10dip"
            android:orientation="vertical" >
            <TextView
                android:id="@android:id/title"
                style="@style/ResourceBrowser.ResourceDescription.Font"
                android:paddingBottom="10dip" />
            <TextView
                android:id="@+id/price"
                style="@style/ResourceBrowser.ResourceDescription.Font.Price" />
        </LinearLayout>
        <include layout="@layout/resource_flag" />
    </FrameLayout>
</LinearLayout>