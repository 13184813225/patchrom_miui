<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 安装监控 -->
    <PreferenceCategory android:title="@string/ad_relative_setting" >
        <CheckBoxPreference
            android:key="key_ad_monitor"
            android:persistent="false"
            android:title="@string/ad_install_monitor">
        </CheckBoxPreference>
    </PreferenceCategory>

    <!-- 自动更新 -->
    <PreferenceCategory android:title="@string/ad_update_setting" >
        <CheckBoxPreference
            android:key="key_ad_update"
            android:persistent="false"
            android:title="@string/ad_update_title" >
        </CheckBoxPreference>
    </PreferenceCategory>

</PreferenceScreen>