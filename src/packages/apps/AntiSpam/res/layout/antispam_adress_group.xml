<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@miui:drawable/v5_list_view_item_bg_light"
    android:listSelector="@android:color/transparent">

    <TextView
        android:id="@+id/name"
        android:textAppearance="@miui:style/V5.TextAppearance.List"
        android:layout_width="match_parent"
        android:layout_height="34dip"
        android:paddingLeft="@miui:dimen/v5_list_view_padding_horizontal"
        android:paddingRight="@miui:dimen/v5_list_view_padding_horizontal"
        android:singleLine="true"
        android:paddingTop="15dip"
        />

    <CheckBox
        android:id="@android:id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dip"
        android:focusable="false" />

    <TextView
        android:id="@+id/hint"
        android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary"
        android:layout_width="match_parent"
        android:layout_height="33dip"
        android:layout_below="@id/name"
        android:paddingTop="0dip"
        android:layout_marginLeft="38dip"
        android:ellipsize="end"
        android:singleLine="true"/>

</RelativeLayout>
