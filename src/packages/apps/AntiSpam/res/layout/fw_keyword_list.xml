<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text2"
        style="@miui:style/V5.TextAppearance.List.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/st_filter_keywords_setting_summary2" />

    <TextView
        android:id="@+id/text1"
        style="@miui:style/V5.TextAppearance.List.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/text2"
        android:gravity="center"
        android:paddingTop="@dimen/list_item_padding"
        android:text="@string/st_filter_keywords_setting_summary1" />

    <com.miui.antispam.ui.view.EditableListViews
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/text1"
        android:fastScrollEnabled="true" />

</RelativeLayout>