<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    style="@miui:style/V5.Widget.ListView.Item.DoubleLine"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="7"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/title"
                style="@miui:style/V5.TextAppearance.List.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="@dimen/list_item_maxwidth"
                android:singleLine="true" />

            <TextView
                android:id="@+id/unread_count"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/unread_count_bg"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@style/UnreadCount"
                android:visibility="gone" />

            <TextView
                android:id="@+id/count"
                style="@miui:style/V5.TextAppearance.List.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/data1"
            style="@miui:style/V5.TextAppearance.List.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="3.3" >

        <LinearLayout
            android:id="@+id/moerInfoLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/reason"
                style="@miui:style/V5.TextAppearance.List.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:singleLine="true" />

            <TextView
                android:id="@+id/time"
                style="@miui:style/V5.TextAppearance.List.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:singleLine="true" />
        </LinearLayout>

        <CheckBox
            android:id="@android:id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dip"
            android:clickable="false"
            android:focusable="false"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>