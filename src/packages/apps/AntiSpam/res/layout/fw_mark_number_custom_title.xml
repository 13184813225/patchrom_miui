<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mark_number_dialog_custom_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/list_item_padding"
    android:paddingTop="@dimen/list_item_padding" >

    <TextView
        android:id="@+id/mark_number_dialog_maintitle"
        style="@miui:style/V5.TextAppearance.List.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:singleLine="true"
        android:text="@string/mark_number_dialog_maintitle" />

    <TextView
        android:id="@+id/mark_number_dialog_subtitle"
        style="@miui:style/V5.TextAppearance.List.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:drawableRight="@drawable/mark_number_dialog_provider"
        android:singleLine="true"
        android:text="@string/mark_number_dialog_subtitle" />
</LinearLayout>
