<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    style="@miui:style/V5.Widget.ListView.Item.DoubleLine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/list_item_padding"
    android:paddingTop="@dimen/list_item_padding" >

    <TextView
        android:id="@+id/head1"
        style="@miui:style/V5.TextAppearance.List.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignBottom="@id/head1"
        android:layout_alignParentRight="true" >
        <TextView
            android:id="@+id/head2"
            style="@miui:style/V5.TextAppearance.List.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />
        <ImageView
            android:id="@+id/sim_icon_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/log_sim_icon_margin" />
    </LinearLayout>

    <TextView
        android:id="@+id/body"
        style="@miui:style/V5.TextAppearance.List.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/head1"
        android:singleLine="false" />

</RelativeLayout>
