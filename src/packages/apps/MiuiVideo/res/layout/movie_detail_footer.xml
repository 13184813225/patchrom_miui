<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/page_margin"
    android:paddingLeft="@dimen/page_margin"
    android:paddingRight="@dimen/page_margin" >
    
    <Button
        android:layout_marginTop="@dimen/page_margin"
        android:id="@+id/all_reviews"
        android:visibility="invisible"
        android:text="@string/view_all_reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/recommendation_title"
        android:layout_marginTop="@dimen/page_margin"
        android:text="@string/recommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/category_title_margin"
        android:textColor="#4a4a4a" />

    <View
        android:id="@+id/recommendation_line"
        android:layout_width="match_parent" 
        android:layout_height="@dimen/category_separator_height"
        android:layout_marginTop="@dimen/category_separator_margin_top"
        android:layout_marginBottom="@dimen/page_margin"
        android:background="#4cffffff"/>
    
    <include layout="@layout/row_of_posters"/>

</LinearLayout>