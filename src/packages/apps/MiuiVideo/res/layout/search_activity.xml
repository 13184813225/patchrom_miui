<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >
    
  <View       
      android:id="@+id/search_mask"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/p_40_black">
  </View>
    
  <ViewFlipper
      android:id="@+id/content_panel"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:animateLayoutChanges="false"
      android:flipInterval="500"
      android:persistentDrawingCache="animation"
      android:background="@drawable/search_tip">
      
      <LinearLayout 
          android:id="@+id/search_key_panel"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
	      <View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/divider_height"
	        android:background="@color/list_divider" />
          <com.duokan.tv.video.widget.ListViewEx
          android:id="@+id/search_list"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:footerDividersEnabled="false"
          android:headerDividersEnabled="false"/>   
      </LinearLayout>

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/search_result_bg">

          	  <include layout="@layout/load_view" 
              	android:layout_width="match_parent"
              	android:layout_height="match_parent" 
              	android:layout_gravity="center"/>
          	  
          	  <com.duokan.tv.video.widget.RetryLoadingView
          	    android:id="@+id/retry_search"
          	  	android:layout_width="match_parent"
              	android:layout_height="match_parent"
              	android:layout_gravity="center">
          	  </com.duokan.tv.video.widget.RetryLoadingView>
              
			  <FrameLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent">
			    
			    <View 
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/viewpager_bg_height"
			        android:layout_marginTop="@dimen/viewpager_bg_margin_top"
			        android:background="@drawable/channel_bottom_bg">   
			    </View>
			    
				<com.duokan.tv.video.widget.ShadowFrameLayout
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"> 	      
				    
					<com.duokan.tv.video.widget.PagerViewEx
					   android:id="@+id/search_result"
					   android:layout_width="match_parent"
					   android:layout_height="match_parent"/>
				    
				    <com.duokan.tv.video.widget.ShadowView
				      android:layout_width="match_parent"
				      android:layout_height="@dimen/shadow_mask_height"
				      android:layout_gravity="top"
				      android:layout_marginTop="@dimen/shadow_mask_magrin_top"
				      android:background="@drawable/shadow_mask">   
					 </com.duokan.tv.video.widget.ShadowView>
					  
				</com.duokan.tv.video.widget.ShadowFrameLayout>
			    
			</FrameLayout>
              
      </LinearLayout>
      
  </ViewFlipper>

</merge>