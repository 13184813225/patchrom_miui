<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:background="@drawable/clickable_item_bg"
        android:id="@+id/search_key"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_key_list_height"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/search_key_list_padding"
        android:paddingRight="@dimen/search_key_list_padding"
        android:textColor="@color/text_content_color"
        android:textSize="@dimen/text_main_size" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/list_divider" />

</LinearLayout>