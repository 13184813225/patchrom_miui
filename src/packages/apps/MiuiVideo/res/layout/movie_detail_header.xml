<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/page_margin"
    android:paddingRight="@dimen/page_margin"
    android:orientation="vertical" >

    <TextView 
        android:id="@+id/brief_intro_title"
        android:text="@string/brief_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/category_title_margin"
        android:textColor="#4a4a4a" />

    <View
        android:layout_marginTop="@dimen/category_separator_margin_top"
        android:id="@+id/brief_intro_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_separator_height"
        android:background="#4cffffff"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView 
			android:layout_margin="@dimen/list_item_text_margin"            
            android:id="@+id/desc"
            android:lineSpacingExtra="@dimen/text_line_space"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        
    </LinearLayout>
    
    <TextView
        android:text="@string/movie_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/page_margin"
        android:layout_marginLeft="@dimen/category_title_margin"
        android:textColor="#4a4a4a" />

    <View
        android:layout_marginTop="@dimen/category_separator_margin_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_separator_height"
        android:background="#4cffffff"/>    

</LinearLayout>