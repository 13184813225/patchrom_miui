<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/series_button_space" >

    <FrameLayout
        android:id="@+id/series_left"
        android:layout_width="0dp"
        android:layout_height="@dimen/series_button_height"
        android:layout_weight="1"
        android:background="@drawable/series_button_bg"
        android:clickable="true" >

        <TextView
            android:id="@+id/left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/text_normal_size" />

        <ProgressBar
            android:id="@+id/left_loading"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/series_middle"
        android:layout_width="0dp"
        android:layout_height="@dimen/series_button_height"
        android:layout_marginLeft="@dimen/series_button_space"
        android:layout_weight="1"
        android:background="@drawable/series_button_bg"
        android:clickable="true" >

        <TextView
            android:id="@+id/middle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/text_normal_size" />

        <ProgressBar
            android:id="@+id/middle_loading"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/series_right"
        android:layout_width="0dp"
        android:layout_height="@dimen/series_button_height"
        android:layout_marginLeft="@dimen/series_button_space"
        android:layout_weight="1"
        android:background="@drawable/series_button_bg"
        android:clickable="true" >

        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/text_normal_size" />

        <ProgressBar
            android:id="@+id/right_loading"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

</LinearLayout>