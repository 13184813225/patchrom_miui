<?xml version="1.0" encoding="utf-8"?>
<com.miui.video.storage.ui.PathNav xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/path_nav"
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:layout_weight="1" >

    <TextView
        android:id="@+id/first_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.80"
        android:background="@drawable/path_gallery_item_bg"
        android:gravity="center"
        android:textColor="@drawable/path_item_text_color_selector"
        android:textSize="13sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:id="@+id/path_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/scroll_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </LinearLayout>
    </HorizontalScrollView>

</com.miui.video.storage.ui.PathNav>