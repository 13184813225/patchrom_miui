<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cover_text_margin"
        android:layout_marginRight="@dimen/cover_text_margin"
        android:singleLine="true"
        android:id="@+id/media_item_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal_smaller_size"
        android:layout_width="match_parent"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cover_text_margin_bottom"
        android:orientation="horizontal" >
        
        <TextView android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal_smaller_size"
            android:textColor="#b2b1b1"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/cover_text_margin"
            android:singleLine="true"
            android:ellipsize="none"
            android:id="@+id/media_item_status"
            android:layout_width="0dp"/>
        
        <TextView
            android:id="@+id/media_item_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cover_text_margin"
            android:layout_marginRight="@dimen/cover_text_margin"
            android:gravity="right"
            android:textColor="#ff7e00"
            android:textSize="@dimen/text_normal_smaller_size" />
        
    </LinearLayout>
    

</LinearLayout>