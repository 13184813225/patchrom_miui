<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<LinearLayout
	    android:id="@+id/lt_bottombar"
	    style="@miui:style/V5.Widget.BottomBar"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/detail_bottombar_height"
	    android:paddingTop="@dimen/media_bottom_bar_padding_vertical"
	    android:paddingBottom="@dimen/media_bottom_bar_padding_vertical"
	    android:layout_gravity="bottom"  
	    android:background="@drawable/detail_bottombar">
		
	        <Button
	            android:id="@+id/btn_myfavorite"
	            android:layout_width="@dimen/detail_bottom_button_width"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_weight="1"
	            android:background="@drawable/btn_detail_left"
	            android:text="@string/favorite"
	            android:textSize="@dimen/text_size_30" 
	            android:textColor="@color/p_80_white" />
	
	        <Button
	            android:id="@+id/btn_play"
	            android:layout_width="@dimen/detail_bottom_button_width"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginTop="@dimen/media_bottom_bar_right_btn_margin_top"
	            android:layout_marginBottom="@dimen/media_bottom_bar_right_btn_margin_bottom"
	            android:layout_weight="1"
	            android:background="@drawable/btn_detail_right"
	            android:text="@string/play"
	            android:textSize="@dimen/text_size_30" 
	            android:textColor="@color/p_80_white" />
	                  
	
	</LinearLayout>

</FrameLayout>


