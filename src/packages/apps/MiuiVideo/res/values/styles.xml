<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:listSelector">@drawable/transparent</item>
        <item name="android:cacheColorHint">@null</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="GridViewStyle" parent="@android:style/Widget.GridView">
        <item name="android:divider">@null</item>
        <item name="android:listSelector">@null</item>
        <item name="android:cacheColorHint">@null</item>
    </style>
    
    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:padding">@dimen/comment_edittext_padding</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="ProgressBar.Small" parent="@android:style/Widget.ProgressBar.Small">
    </style>
  
    <style name="ProgressBar.Medium" parent="@android:style/Widget.ProgressBar">
    </style>

</resources>