<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutId"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/lcd_test_1"
        android:textSize="20sp" />
	<TextView
	    android:id="@+id/lcd_test_text_view1"
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_gravity="center|center_horizontal|center_vertical"
	    android:layout_weight="5"
	    android:gravity="center|center_vertical"
	    android:textSize="20sp" />
	
	<TextView
	    android:id="@+id/lcdTest_status"
	    android:layout_width="wrap_content"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_gravity="center"
	    android:text="@string/status_success"
	    android:textSize="20sp" />
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal" >
	    
        <Button
            android:id="@+id/lcd_test_fail"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/test_fail" />

        <Button
            android:id="@+id/lcd_test_succeed"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/test_succeed" />
    </LinearLayout>


    <Button
        android:id="@+id/lcd_test_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/back_return" />

</LinearLayout>