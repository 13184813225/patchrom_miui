<?xml version="1.0" encoding="UTF-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	    
    <TextView
        android:id="@+id/headset_note_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/headset_testting_1"
        android:layout_gravity="center"
        android:textSize="20dp" />
    	    
    <TextView
        android:id="@+id/headset_note_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/headset_testting_2"
        android:layout_gravity="left"
        android:textSize="18dp" />    
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

	    <TextView
	        android:id="@+id/headset_avail0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/headset_testting"
	        android:textSize="18dp" />
	
	    <TextView
	        android:id="@+id/headset_avail1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/test_no"
	        android:textSize="18dp" />
	    
    </LinearLayout>
    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >
		
	    <LinearLayout
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="left" >
		    
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/headset_audio_test"
		        android:textSize="18dp" />
		    <TextView
				android:id="@+id/headset_audio_test_r"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="18dp" />
		    
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <Button
	            android:id="@+id/headset_start"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/headset_audio_start" />	  
	        
	        <Button
	            android:id="@+id/headset_audio_pass"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/headset_audio_pass" />	
	            
	        <Button
	            android:id="@+id/headset_audio_fail"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/headset_audio_fail" />	
	
	    </LinearLayout>
        
    </LinearLayout>
    
    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >
		
		<LinearLayout
		    android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal" >
			<TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/headset_loop_back_test_result"
		        android:textSize="18dp" />
	        
			<TextView
				android:id="@+id/headset_loop_back_test_result_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="18dp" />
		</LinearLayout>
		
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:orientation="horizontal" >
	        
		    <Button
		        android:id="@+id/headset_loop_back_start_button"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:text="@string/headset_loop_back_start_test" /> 
		        
			<Button
		        android:id="@+id/headset_loop_back_stop_button"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:text="@string/headset_loop_back_stop_test" />  
		        
			<Button
		        android:id="@+id/headset_loop_back_pass_button"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:text="@string/headset_loop_back_pass_test" /> 
		        
			<Button
		        android:id="@+id/headset_loop_back_fail_button"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:text="@string/headset_loop_back_fail_test" />  
	         
	    </LinearLayout>
        
    </LinearLayout>
	    

    <LinearLayout
        android:id="@+id/hook_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/headset_button_testting"
	        android:textSize="18dp" />

	    <TextView
	        android:id="@+id/headset_button1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/headset_not_plug"
	        android:textSize="18dp" />

    </LinearLayout>

	    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >
	    
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/test_result"
	        android:textSize="20dp" />
        
	    <TextView
	        android:id="@+id/headset_test_result"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20dp" />
        
    </LinearLayout>

	    	    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/headset_succeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/test_succeed" />

        <Button
            android:id="@+id/headset_fail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/test_fail" />
  
    </LinearLayout>	

    <Button
        android:id="@+id/headset_back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_return" />
        
</LinearLayout>
