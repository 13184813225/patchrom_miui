<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/bluetooth_test"
        android:textSize="20sp" />
	<TextView
	    android:id="@+id/bluetooth_test_text_view1"
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_gravity="center|center_horizontal|center_vertical"
	    android:layout_weight="0.00"
	    android:gravity="center|center_vertical"
	    android:textSize="20sp" />
	<TextView
	    android:id="@+id/bluetooth_test_text_view2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center|center_horizontal|center_vertical|left"
	    android:gravity="left"
	    android:text="@string/buletooth_test_devicelist"
	    android:textSize="20sp" />
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="2" >
	    
	    <TextView
	    android:id="@+id/bluetooth_test_text_view3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="left"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="20dp"
	    android:textSize="20sp" />
	</ScrollView>
	
	

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="4"
	    android:gravity="center"
	    android:orientation="horizontal" >

	    <Button
	        android:id="@+id/bluetooth_test_start"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="@string/buletooth_test_open"
	        android:textSize="20sp" />
	    <Button
	        android:id="@+id/bluetooth_test_search"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="@string/buletooth_test_startsearch"
	        android:textSize="20sp" />

	</LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bluetooth_test_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/test_fail" />

        <Button
            android:id="@+id/bluetooth_test_succeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/test_succeed" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bluetooth_test_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/back_return" />
    </LinearLayout>

</LinearLayout>