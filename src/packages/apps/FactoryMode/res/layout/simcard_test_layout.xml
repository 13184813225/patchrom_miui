<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/simcard_test"
        android:textSize="20sp" />

	<TextView
	    android:id="@+id/simcard_test_text_view1"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="2"
	    android:layout_gravity="center|center_horizontal|center_vertical"
	    android:gravity="center|center_vertical"
	    android:textSize="20sp" />
	<TextView
	    android:id="@+id/simcard_test_text_view2"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="2"
	    android:layout_gravity="center|center_horizontal|center_vertical"
	    android:gravity="center|center_vertical"
	    android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/simcard_test_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/test_fail" />

        <Button
            android:id="@+id/simcard_test_succeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/test_succeed" />
    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom" >
	    <Button
	        android:id="@+id/simcard_test_back"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="@string/back_return" />
    </LinearLayout>


</LinearLayout>