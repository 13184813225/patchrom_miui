<?xml version="1.0" encoding="utf-8"?>
<view xmlns:android="http://schemas.android.com/apk/res/android"
    class="com.miui.voiceassist.gadget.GadgetMusic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/music_bg">

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        />

    <LinearLayout
        android:id="@+id/content_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include android:id="@+id/music_play" layout="@layout/gadget_music_play" android:visibility="gone"/>
        <include android:id="@+id/music_search" layout="@layout/gadget_music_search" android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/music_find_more_divider" />
        <TextView
            style="@style/MusicFindMoreText"
            android:id="@+id/find_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/music_find_more"
            />
    </LinearLayout>
</view>