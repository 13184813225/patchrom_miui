<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_horizontal"
	android:padding="10dip">
	<EditText android:id="@+id/edit_text" 	
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:gravity="top|left"
		android:textSize="20sp" 
		android:minLines="8"
		android:maxLines="10" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation="horizontal"
		android:gravity="center_horizontal">
		<Button android:id="@+id/btn_recognize" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_marginTop="10dip"
			android:paddingLeft="25dip"
			android:paddingRight="25dip"
			android:paddingTop="10dip"
			android:paddingBottom="10dip" 
			android:text="语义识别" 
			android:textSize="20sp" />

		<Button
		    android:id="@+id/btn_synthesize"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dip"
		    android:paddingBottom="10dip"
		    android:paddingLeft="30dip"
		    android:paddingRight="15dip"
		    android:paddingTop="10dip"
		    android:text="语音合成"
		    android:textSize="20sp" />

	</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:orientation="horizontal"
			android:gravity="center_horizontal">
		<View android:layout_width="0dip" 
			android:layout_height="0dip"
			android:layout_weight="1" />
		<Button android:id="@+id/btn_uploadcontact" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_marginTop="10dip"
			android:paddingLeft="25dip"
			android:paddingRight="25dip"
			android:paddingTop="10dip"
			android:paddingBottom="10dip" 
			android:text="上传通讯录" 
			android:textSize="20sp" />
		<View android:layout_width="0dip" 
			android:layout_height="0dip"
			android:layout_weight="1" />
		<Button android:id="@+id/btn_text_search" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_marginTop="10dip"
			android:paddingLeft="25dip"
			android:paddingRight="25dip"
			android:paddingTop="10dip"
			android:paddingBottom="10dip" 
			android:text="语义搜索" 
			android:textSize="20sp" />
		<View android:layout_width="0dip" android:layout_height="0dip"
			android:layout_weight="1" />
	</LinearLayout>
	
	<Button android:id="@+id/bt_tova"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="语音助手" />
</LinearLayout>
