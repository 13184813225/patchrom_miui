<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right" >

   <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <ImageView
            android:id="@+id/sendfailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:src="@drawable/hms_message_sender_failed"/>

        <TextView
            android:id="@+id/messagependId"
            style="@style/TextAppearance.MessageDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/message_pending" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hms_extra_line_padding"
        android:layout_marginRight="@dimen/hms_extra_line_padding"
        android:background="@drawable/mi_message_bubble_out_bg" >

        <include layout="@layout/message_item_simple_hms_body_out" />
    </LinearLayout>

</LinearLayout>