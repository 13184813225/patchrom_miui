<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- virus scan begin -->
    <style name="TextAppearance.Virus.Title.Medium" parent="@miui:V5.TextAppearance.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Virus.Title.Big" parent="@miui:V5.TextAppearance.Title">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="VirusScanCenter.General.ActionBar" parent="@miui:V5.Theme.Light">
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
    </style>

    <style name="VirusScanCenter.Main.ActionBar" parent="@miui:V5.Theme.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.Title"> <!-- 有反色 -->
        <item name="android:textColor">@color/virus_scan_details_title_text</item>
        <!-- redefine text style and shadow, which is different from V5. -->
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextAppearance.Title.Secondary"> <!-- 有反色 -->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@miui:dimen/v5_text_font_size_small</item>
        <item name="android:textColor">@color/virus_scan_details_size_text</item>
    </style>
    <!-- virus scan end -->

    <style name="DoubleActionBarStyle" parent="@miui:V5.Widget.ActionBar">
        <item name="android:displayOptions">showCustom</item>
        <item name="android:height">@dimen/log_detail_title_height</item>
    </style>

    <!-- anti-spam begin -->
    <style name="ActionBarStyle" parent="@miui:V5.Widget.ActionBar">
        <item name="android:displayOptions">showTitle</item>
        <item name="android:height">@dimen/log_detail_title_height</item>
    </style>
    <!-- anti-spam end -->


    <!-- permission manager begin -->

    <style name="Permission.Main.ActionBar" parent="@miui:V5.Theme.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
    </style>

    <style name="ActionBar.Permission.Show.NoTitle" parent="@miui:V5.Widget.ActionBar">
        <item name="android:displayOptions">@null</item>
    </style>

    <style name="Theme.Permission.Light.Show.NoTitle" parent="@miui:V5.Theme.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Permission.Show.NoTitle</item>
        <item name="miui:v5_action_bar_tab">true</item>
    </style>

    <style name="TextAppearance.Permission.Primary" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/transparent_80_balck</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Permission.Secondary" parent="android:TextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/shadow</item>
    </style>

    <style name="TextAppearance.Permission.SubTitle" parent="android:TextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/action_bar_subtitle</item>
    </style>
    <!-- permission manager end -->


    <!-- ActionBar -->
    <style name="SecurityCenter.General.WithActionBar" parent="@miui:V5.Theme.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.Title.Medium" parent="@miui:style/V5.TextAppearance.Title">
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- new optimize start -->
    <style name="OptimizeCenter.Main.ActionBar" parent="@miui:V5.Theme.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
    </style>

    <style name="OptimizeCenter.General.ActionBar" parent="@miui:V5.Theme.Light">
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
    </style>
    <!-- new optimize end -->

</resources>