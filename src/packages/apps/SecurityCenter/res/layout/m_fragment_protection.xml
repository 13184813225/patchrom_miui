<?xml version="1.0" encoding="utf-8"?>
<com.miui.securitycenter.view.ProtectionFragmentView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/protection_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="22dip"
        android:paddingTop="22dip" >

        <Button
            android:id="@+id/optimize"
            android:layout_width="320dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/button_text_a_key_optimize"
            android:textColor="@color/optimize_button_text_color"
            android:textSize="16sp" />
    </FrameLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/toolBar" />

    <include layout="@layout/m_protection_header_view" />

</com.miui.securitycenter.view.ProtectionFragmentView>