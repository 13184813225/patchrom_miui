<?xml version="1.0" encoding="utf-8"?>
<com.miui.optimizecenter.view.QuickScanApkListItemView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@miui:style/V5.Widget.ListView.Item.DoubleLine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="10dip"
    android:paddingLeft="16dip"
    android:paddingRight="16dip"
    android:paddingTop="10dip" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="43dip"
        android:layout_height="43dip"
        android:layout_centerVertical="true" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_toLeftOf="@id/checkbox"
        android:layout_toRightOf="@id/icon"
        android:shrinkColumns="0,1"
        android:stretchColumns="0,1" >

        <TableRow>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dip"
                android:singleLine="true"
                android:textAppearance="@miui:style/V5.TextAppearance.List.Primary" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:minWidth="90dip"
                android:singleLine="true"
                android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dip"
                android:singleLine="true"
                android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:minWidth="90dip"
                android:singleLine="true"
                android:textAppearance="@miui:style/V5.TextAppearance.List.Secondary" />
        </TableRow>
    </TableLayout>

</com.miui.optimizecenter.view.QuickScanApkListItemView>