<?xml version="1.0" encoding="utf-8"?>
<com.miui.optimizecenter.view.InternalStorageFragmentView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:id="@+id/internal_storage_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/storage_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dip" >

        <LinearLayout
            android:id="@+id/memory_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3" >

            <TextView
                android:id="@+id/avail_memory"
                style="@style/ListItemMainViewTextSecondary"
                android:layout_weight="1"
                android:text="@string/internal_available_memory_hint" />

            <TextView
                android:id="@+id/used_memory"
                style="@style/ListItemMainViewTextSecondary"
                android:layout_weight="1"
                android:text="@string/internal_used_memory_hint" />
        </LinearLayout>

        <com.miui.optimizecenter.view.PercentageBarChart
            android:id="@+id/usage_bar"
            android:layout_width="match_parent"
            android:layout_height="16dip"
            android:layout_below="@id/memory_bar"
            android:layout_marginTop="15dip"
            settings:emptyColor="@color/memory_avail"
            settings:minTickWidth="6dip" />

        <LinearLayout
            android:id="@+id/legend_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/usage_bar"
            android:layout_marginTop="15dip"
            android:weightSum="3" >

            <TextView
                android:id="@+id/legend_cache"
                style="@style/ListItemMainViewTextPrimary"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_legend_memory"
                android:drawablePadding="6dip"
                android:text="@string/internal_memory_item_cache_hint"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/legend_app"
                style="@style/ListItemMainViewTextPrimary"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_legend_app"
                android:drawablePadding="6dip"
                android:text="@string/internal_memory_item_app_hint"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/warning_view"
            style="@style/ListItemMainViewTextSecondary"
            android:layout_width="match_parent"
            android:layout_below="@id/legend_bar"
            android:drawableLeft="@drawable/icon_warning"
            android:drawablePadding="6dip"
            android:paddingTop="15dip"
            android:singleLine="false"
            android:text="@string/internal_memory_low_waring_hint"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/storage_bar"
        android:background="@drawable/header_bar_bg" >

        <TextView
            android:id="@+id/header_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textAppearance="@android:style/TextAppearance.Small" />

        <TextView
            android:id="@+id/header_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textAppearance="@android:style/TextAppearance.Small" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="85dip"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/uninstall_backup_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_text_backup_and_cleanup_apps"
            android:textColor="@color/optimize_button_text_color"
            android:textSize="16sp" />

        <Button
            android:id="@+id/uninstall_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_text_cleanup_apps"
            android:textColor="@color/optimize_button_text_color"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tool_bar"
        android:layout_below="@id/header_bar" >

        <com.miui.securitycenter.common.ExpandableListView
            android:id="@+id/app_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none" />

        <TextView
            android:id="@+id/empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="10dip"
            android:drawableTop="@drawable/icon_list_empty"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/loading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</com.miui.optimizecenter.view.InternalStorageFragmentView>