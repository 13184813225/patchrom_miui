<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:miui="http://schemas.android.com/apk/res/com.android.settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/background"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text="@string/power_used_prefix"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/battery_used_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="@string/power_used_hours_test"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <com.miui.securitycenter.view.PowerMenuItemView
            android:id="@+id/power_autorun_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            miui:menuSummary="@string/power_autorun_control_desc"
            miui:menuTitle="@string/power_autorun_control_title" />

        <com.miui.securitycenter.view.PowerMenuItemView
            android:id="@+id/power_usage_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/power_autorun_control"
            miui:menuSummary="@string/power_usage_sort_desc"
            miui:menuTitle="@string/power_usage_sort_title" />

        <com.miui.securitycenter.view.PowerMenuItemView
            android:id="@+id/power_mode_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/power_usage_sort"
            miui:menuSummary="@string/power_mode_select_desc"
            miui:menuTitle="@string/power_mode_select_title" />
    </RelativeLayout>

</LinearLayout>