<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/optimize_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/optimize_title_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/optimize_score_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <miui.widget.ImageTextView
                android:id="@+id/optimize_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:entries="@array/opt_score_entries"
                android:entryValues="@array/opt_score_entryValues_small"
                android:gravity="right|center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:paddingTop="35dp"
                android:shadowColor="#50000000"
                android:shadowDx="0"
                android:shadowDy="10"
                android:shadowRadius="12"
                android:singleLine="true"
                android:text="@string/score"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/optimize_state"
                style="@miui:style/V5.TextAppearance.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|bottom"
                android:singleLine="true"
                android:text="@string/opt_state_running"
                android:textStyle="normal"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/optimize_items"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:cacheColorHint="@null"
        android:divider="@null" />

    <Button
        android:id="@+id/optimize_button_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="15dip"
        android:gravity="center"
        android:text="@string/opt_done_desc"
        android:textAppearance="@miui:style/V5.TextAppearance.Button" />

</LinearLayout>