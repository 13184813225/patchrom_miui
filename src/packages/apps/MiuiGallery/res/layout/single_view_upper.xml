<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="horizontal"
    android:background="@drawable/single_view_menu_bg"
 >
     <LinearLayout android:gravity="left"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
        <ImageView android:id="@+id/single_view_back"
            style="@style/SingleViewBackButton"
            android:src="@drawable/single_view_back_n"
        />
     </LinearLayout>
     <LinearLayout android:gravity="center_vertical"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content">
        <ImageView android:id="@+id/single_view_send"
            style="@style/SingleViewButton"
            android:src="@drawable/single_view_send_n"
        />
        <ImageView android:id="@+id/single_view_apply"
            style="@style/SingleViewButton"
            android:src="@drawable/single_view_apply_n"
        />
        <ImageView android:id="@+id/single_view_edit"
            style="@style/SingleViewButton"
            android:src="@drawable/single_view_edit_n"
        />
        <ImageView android:id="@+id/single_view_delete"
            style="@style/SingleViewButton"
            android:src="@drawable/single_view_delete_n"
        />
    </LinearLayout>
</LinearLayout>
