<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="UserbookActivityTheme" parent="@miui:style/V5.Theme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:homeAsUpIndicator">@null</item>
        <item name="android:actionBarStyle">@style/Widget.ActionBar.Userbook</item>
        <item name="miui:v5_title_bar_bg">@drawable/title_bar_bg_light</item>
    </style>

    <!-- Widget Style -->
    <style name="Widget" parent="@miui:style/V5.Widget" />
    <style name="Widget.ActionBar" parent="@miui:style/V5.Widget.ActionBar" />
    <style name="Widget.ActionBar.Userbook">
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
        <item name="android:logo">@drawable/userbook_logo</item>
    </style>

    <style name="UserbookDetailActivityTheme" parent="@miui:style/V5.Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="miui:v5_title_bar_bg">@drawable/title_bar_bg_light</item>
    </style>

</resources>