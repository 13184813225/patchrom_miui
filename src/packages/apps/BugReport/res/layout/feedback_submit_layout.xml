<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feedback_submit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/feedback_margin_left"
        android:layout_marginRight="@dimen/feedback_margin_right"
        android:layout_marginTop="@dimen/feedback_margin_top" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/hot_problem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/feedback_section_hotpro_height"
                android:background="@drawable/hotproblem_title"
                android:gravity="center_vertical"
                android:paddingTop="0dip"
                android:paddingBottom="0dip"
                >
                <TextView
                    android:id="@+id/hot_problem_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/feedback_margin_left"
                    android:layout_marginRight="@dimen/feedback_margin_right"
                    android:gravity="center_vertical"
                    android:drawableRight="@miui:drawable/v5_arrow_right"
                    android:text="@string/hot_problem"
                    android:textColor="@color/textEightColor"
                    android:textSize="@dimen/middle_font_size"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/feedback_section_separator_vertial"
                android:gravity="left|top"
                android:padding="@dimen/feedback_section_edit_padding"
                android:hint="@string/description"
                android:minHeight="@dimen/feedback_section_edit_height"
                android:singleLine="false"
                android:background="@drawable/problem_description_edittext_bg"
                style="@miui:style/V5.TextAppearance.EditText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/feedback_section_screenshot_height"
                android:layout_marginTop="@dimen/feedback_section_separator_vertial"
                android:background="@drawable/submit_picture_bg"
                >
                <com.miui.bugreport.ui.ScreenshotContainerLayout
                    android:id="@+id/screenshot_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/feedback_section_separator_vertial"
                    >
                </com.miui.bugreport.ui.ScreenshotContainerLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_marginLeft="@dimen/feedback_margin_left"
        android:layout_marginRight="@dimen/feedback_margin_right"
        android:layout_marginBottom="@dimen/feedback_margin_bottom"
        android:text="@string/action_submit"
        style="@miui:style/V5.TextAppearance.Button" />

</LinearLayout>
