<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@miui:style/V5.Widget.ListView.Item.SingleLine"
    android:id="@+id/hotproblem_selection_layout"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/hotproblem_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"
        android:src="@drawable/hotproblem_select" />

    <TextView
        android:id="@+id/itemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:singleLine="true"
        android:paddingLeft="@dimen/feedback_margin_left"
        style="@miui:style/V5.TextAppearance.List" />

</LinearLayout>