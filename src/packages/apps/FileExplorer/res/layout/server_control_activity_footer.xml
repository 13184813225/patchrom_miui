<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/instruction_pre"
        android:text="@string/instruction_pre"
        android:visibility="gone"
        style="@style/FtpMessageStyle" />
    <TextView
        android:id="@+id/instruction"
        android:text="@string/instruction"
        style="@style/FtpMessageStyle" />

    <TextView
        android:id="@+id/ip_address"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:minWidth="100dip"
        android:background="@drawable/ipaddress_bg"
        android:textStyle="bold"
        android:singleLine="true"
        android:textSize="21dip"
        android:gravity="center"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="25dip"
        android:paddingTop="3dip"
        android:paddingBottom="3dip"
        android:paddingLeft="21dip"
        android:paddingRight="21dip"
        android:textColor="#ffffff" />

    <LinearLayout
        android:id="@+id/start_stop_button"
        android:layout_height="wrap_content"
        android:layout_width="182dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/btn_bottom"
        android:gravity="center"
        android:paddingTop="5dip"
        android:paddingBottom="5dip">
        <TextView
            android:id="@+id/start_stop_button_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="18dip"
            android:textColor="#80000000"
            android:drawablePadding="6dip"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
