<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black" >

    <cn.kuaipan.android.widget.EdgeEffectViewPager
        android:id="@+id/kuaipan_slide_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-10dip"
        android:layout_marginRight="-10dip"
        android:background="@drawable/png_bg" >
    </cn.kuaipan.android.widget.EdgeEffectViewPager>

    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@miui:drawable/v5_edit_mode_top_bar_no_shadow_bg_light"
        android:paddingLeft="0dip" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@miui:drawable/v5_title_bar_back_button_light" >
        </ImageView>

        <TextView
            android:id="@+id/page_index"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="18dip"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@miui:drawable/v5_edit_mode_bottom_bar_bg_light"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@miui:drawable/v5_edit_mode_bottom_bar_more_icon_bg_dark"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@miui:drawable/v5_bottom_bar_save_icon_normal_dark" >
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/operation_save"
                android:textColor="@color/bottom_bar_text_color"
                android:textSize="12dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@miui:drawable/v5_edit_mode_bottom_bar_more_icon_bg_dark"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@miui:drawable/v5_bottom_bar_send_icon_normal_dark" >
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/operation_send"
                android:textColor="@color/bottom_bar_text_color"
                android:textSize="12dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@miui:drawable/v5_edit_mode_bottom_bar_more_icon_bg_dark"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@miui:drawable/v5_bottom_bar_delete_icon_normal_dark" >
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/operation_delete"
                android:textColor="@color/bottom_bar_text_color"
                android:textSize="12dip" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>