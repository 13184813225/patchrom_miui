<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShadowStyle">
        <item name="android:shadowColor">#6e6e6e</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="DeepStyle">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">-0.5</item>
        <item name="android:shadowDy">-0.5</item>
        <item name="android:shadowRadius">0.5</item>
    </style>
    <style name="OrangeStyle">
        <item name="android:shadowColor">#742061</item>
        <item name="android:shadowDx">-0.5</item>
        <item name="android:shadowDy">-0.5</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="GreenStyle">
        <item name="android:shadowColor">#003300</item>
        <item name="android:shadowDx">-0.5</item>
        <item name="android:shadowDy">-0.5</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="HomeButtonStytle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dip</item>
    </style>

    <style name="FileViewToolbarButtonStytle">
        <item name="android:padding">10dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FileViewOperationButtonStytle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#666666</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/operation_button_background</item>
    </style>

    <style name="FileViewOperationMoveButtonStytle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textColor">#666666</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:background">@drawable/remote_button_bg</item>
    </style>

    <style name="CategoryButtonStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/category_button</item>
    </style>
    <style name="CategoryButtonIconStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">3px</item>
    </style>
    <style name="CategoryButtonTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">19px</item>
        <item name="android:textColor">#111111</item>
    </style>
    <style name="CategoryButtonCountTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15px</item>
        <item name="android:textColor">#A6A6A6</item>
        <item name="android:text">@string/category_default_number_text</item>
    </style>

    <style name="InformationItemTitleStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">60dip</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14dip</item>
    </style>

    <style name="InformationItemContentStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14dip</item>
        <item name="android:layout_marginLeft">5dip</item>
    </style>
    <style name="InformationItemStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="InformationTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">12dip</item>
        <item name="android:drawablePadding">5dip</item>
    </style>
    <style name="CategoryLegendStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:drawablePadding">5px</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">10dip</item>
        <item name="android:layout_marginLeft">2dip</item>
    </style>
    <style name="CategoryLegendStyleLand">
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:drawablePadding">5px</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">10dip</item>
        <item name="android:layout_marginLeft">2dip</item>
    </style>
    <style name="InformationDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/popup_bg</item>
    </style>
    <style name="ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.ActionButton</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance">
    </style>

    <style name="TextAppearance.ActionButton">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="BottomButton" >
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColor">#cc000000</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowColor">#80ffffff</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:shadowDy">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="BottomButton.Left">
        <item name="android:background">@drawable/bottom_btn_left</item>
    </style>

    <style name="BottomButton.Right">
        <item name="android:background">@drawable/bottom_btn_right</item>
    </style>

    <style name="BottomButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/bottom_button_bar</item>
    </style>

    <style name="larger_title_text_style" parent="android:Theme">
        <item name="android:textColor">#132740</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">marquee</item>
    </style>
      <style name="row_name_text_style" parent="android:Theme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    <style name="row_detail_text_style" parent="android:Theme">
        <item name="android:textColor">#587BA8</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    <style name="normal_title_text_style" parent="android:Theme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    <style name="detail_text_style" parent="android:Theme">
        <item name="android:textColor">#cdcdcd</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="FileExplorerActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:displayOptions"></item>
    </style>

    <style name="Widget.Holo.Light.ActionBar.TabText" parent="@android:style/Widget.Holo.Light.ActionBar.TabText.Inverse">
        <item name="android:textColor">@color/primary_tab_text</item>
    </style>

    <style name="FileExplorerTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/FileExplorerActionBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/Widget.Holo.Light.ActionBar.TabText</item>
    </style>

    <style name="Widget.Holo.Light.ActionBar.Solid.HomeUp" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:logo">@drawable/ab_home_up_divider</item>
        <item name="android:displayOptions">homeAsUp|useLogo|showHome|showTitle</item>
    </style>

    <style name="Theme.Light" parent="@android:Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/ab_home_up</item>
        <item name="android:actionBarStyle">@style/Widget.Holo.Light.ActionBar.Solid.HomeUp</item>
    </style>

    <style name="FtpMessageStyle">
        <item name="android:textSize">15dip</item>
        <item name="android:layout_width">225dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">6dip</item>
    </style>

    <style name="Widget.ListView.NoDivider" parent="@android:Widget.ListView">
