<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Dialog_Fullscreen">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="HomeButtonStytle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dip</item>
    </style>

    <style name="FileViewToolbarButtonStytle">
        <item name="android:padding">10dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CategoryButtonStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/category_button</item>
    </style>
    <style name="CategoryButtonIconStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">2dip</item>
    </style>
    <style name="CategoryButtonTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12dip</item>
    </style>
    <style name="CategoryButtonCountTextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">10dip</item>
        <item name="android:text">@string/category_default_number_text</item>
    </style>

    <style name="InformationTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawablePadding">5dip</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="CategoryLegendStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:drawablePadding">3dip</item>
        <item name="android:textSize">10dip</item>
        <item name="android:layout_marginLeft">2dip</item>
    </style>
    <style name="CategoryLegendStyleLand" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:drawablePadding">3dip</item>
        <item name="android:textSize">10dip</item>
        <item name="android:layout_marginLeft">2dip</item>
    </style>
    <style name="InformationDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/popup_bg</item>
    </style>
    <style name="ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.ActionButton</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance">
    </style>

    <style name="TextAppearance.ActionButton">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="BottomButton" >
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColor">@color/bottom_button_text_color</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowColor">#80ffffff</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:shadowDy">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="BottomButton.Left">
        <item name="android:background">@drawable/bottom_btn_left</item>
    </style>

    <style name="BottomButton.Right">
        <item name="android:background">@drawable/bottom_btn_right</item>
    </style>

    <style name="BottomButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/bottom_button_bar</item>
    </style>

    <style name="FileExplorerActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:displayOptions"></item>
    </style>

    <style name="FileExplorerTheme" parent="@style/Theme.Light">
        <item name="android:actionBarStyle">@style/FileExplorerActionBarStyle</item>
    </style>

    <style name="Widget.Holo.Light.ActionBar.Solid.HomeUp" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:displayOptions">homeAsUp|useLogo|showHome|showTitle</item>
    </style>

    <style name="Theme.Light" parent="@miui:Theme.Light">
        <item name="android:actionBarStyle">@style/Widget.Holo.Light.ActionBar.Solid.HomeUp</item>
    </style>

    <style name="FtpMessageStyle">
        <item name="android:textSize">15dip</item>
        <item name="android:layout_width">225dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">6dip</item>
    </style>

    <style name="Widget.ListView.NoDivider" parent="@android:Widget.ListView">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:listSelector">@null</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="LogInPageButtonStyle" parend="@android:style/Widget.Button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@miui:color/button_text</item>
    </style>

    <style name="SupplyMessageStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/kuaipan_supply_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">30dip</item>
        <item name="android:layout_marginBottom">16dip</item>
        <item name="android:drawablePadding">5dip</item>
    </style>

    <style name="KuaipanIntroduceMessageStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/kuaipan_introduce_message_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">24dip</item>
        <item name="android:paddingLeft">46dip</item>
        <item name="android:paddingRight">46dip</item>
    </style>

     <style name="SearchThemeStyle" parent="@style/Theme.Light">
        <item name="android:buttonStyle">@style/Widget.Holo.Light.Button</item>
        <item name="android:actionBarStyle">@style/SearchActionBarStyle</item>
    </style>

    <style name="SearchActionBarStyle" parent="@style/Widget.Holo.Light.ActionBar.Solid.HomeUp">
        <item name="android:displayOptions">homeAsUp|showCustom|showHome</item>
    </style>

    <style name="Widget.Holo.Light.Button" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
    </style>
</resources>
