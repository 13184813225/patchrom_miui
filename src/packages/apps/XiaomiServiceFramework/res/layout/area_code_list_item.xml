<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.xmsf.account.ui.AreaCodePickerListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/section_header"
        style="@style/MiCloudPickerSectionHeaderTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@miui:style/V5.Widget.ListView.Item.SingleLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/micloud_list_item_padding_vertical"
        android:paddingTop="@dimen/micloud_list_item_padding_vertical"
        android:paddingLeft="@dimen/micloud_list_item_padding_left"
        android:paddingRight="@dimen/micloud_list_item_padding_right">
        <TextView
            android:id="@+id/area"
            style="@miui:style/V5.TextAppearance.List.Primary"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"
            android:singleLine="true" />
        <TextView
            android:id="@+id/area_code"
            style="@miui:style/V5.TextAppearance.List.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:layout_gravity="center_vertical"
            android:singleLine="true" />
    </LinearLayout>
</com.xiaomi.xmsf.account.ui.AreaCodePickerListItem>