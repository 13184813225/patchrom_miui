<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/common_padding"
    android:orientation="vertical" >
    <com.xiaomi.xmsf.payment.DenominationGrid
        android:id="@+id/denomination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:gravity="center" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="6dip"
        android:text="@string/prepaid_picker_hint"
        android:textColor="@color/text_color_red"
        android:textSize="@miui:dimen/text_font_size_small" />
    <EditText
        android:id="@+id/number_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:ems="10"
        android:hint="@string/prepaid_number_edit_hint"
        android:inputType="number" />
    <EditText
        android:id="@+id/password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:ems="10"
        android:hint="@string/prepaid_password_edit_hint"
        android:inputType="number" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />
    <Button
        android:id="@+id/button_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_pay_orange_bkg"
        android:textColor="@color/text_color_white"
        android:text="@string/btn_recharge_large" />
    <TextView
        android:id="@+id/recharge_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dip"
        android:layout_marginBottom="15dip"
        android:text="@string/recharge_other"
        android:textSize="@miui:dimen/text_font_size_small"
        android:textColor="@color/text_color_orange" />
</LinearLayout>