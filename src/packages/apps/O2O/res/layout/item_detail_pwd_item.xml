<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_order_number_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:singleLine="true"
        android:text="@string/order_number"
        android:textAppearance="@style/TextAppearance.Title.DetailSecondary.NoAntiColor" />

    <TextView
        android:id="@+id/item_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:singleLine="true"
        android:text="@string/loading_item_detail"
        android:textAppearance="@style/TextAppearance.Title.OrderNumber" />

</LinearLayout>