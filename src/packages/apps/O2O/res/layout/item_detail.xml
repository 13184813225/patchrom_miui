<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detail_background"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/base_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageSwitcher
                    android:id="@+id/itempic"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_detail_pic_height"
                    android:layout_marginBottom="@dimen/item_detail_imageswitch_margin_bottom" />

                <LinearLayout
                    style="@style/Detail.Padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <include layout="@layout/item_detail_upper" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Detail.Padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <include layout="@layout/item_detail_upper_sec" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Detail.Padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <include layout="@layout/item_detail_middle" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Detail.Padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <include layout="@layout/item_detail_bottom" />
                </LinearLayout>
            </LinearLayout>

            <com.xiaomi.o2o.activity.view.EmptyLoadingView
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/item_buy_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_detail_bottom_height"
        android:layout_gravity="bottom"
        android:background="@color/common_list_view_background"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/item_divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/favorites_button"
                style="@style/BottomBarIcon"
                android:layout_width="@dimen/bottombar_fav_width"
                android:layout_height="@dimen/bottombar_fav_height"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_favorites" />

            <TextView
                android:id="@+id/buy_button"
                style="@style/Widget.BottomBar.Button"
                android:layout_gravity="center"
                android:text="@string/buynow"
                android:textAppearance="@style/TextAppearance.BuyButton" />

            <ImageView
                android:id="@+id/share_button"
                style="@style/BottomBarIcon"
                android:layout_width="@dimen/bottombar_fav_width"
                android:layout_height="@dimen/bottombar_fav_height"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_share"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>