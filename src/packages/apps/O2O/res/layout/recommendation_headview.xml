<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.o2o.activity.view.RecommendView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_list_view_background"
    android:orientation="vertical"
    android:paddingTop="@dimen/banner_margin_top" >

    <include layout="@layout/banner_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height"
        android:layout_marginTop="@dimen/banner_margin_top"
        android:orientation="horizontal" >

        <ImageSwitcher
            android:id="@+id/recommadation_hottest"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/banner_margin_left"
            android:layout_marginRight="@dimen/banner_gap"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/place_holder_background" />

        <ImageSwitcher
            android:id="@+id/recommadation_newest"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/banner_gap"
            android:layout_marginRight="@dimen/banner_margin_right"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/place_holder_background" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/recommend_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/recommend_margin_bottom"
        android:layout_marginLeft="@dimen/recommend_margin_left"
        android:layout_marginTop="@dimen/recommend_margin_top" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="@string/recommend_title"
            android:textAppearance="@style/TextAppearance.Title.Recommend" />

        <LinearLayout
            android:id="@+id/location_city_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/location_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/category_desc_margin_right"
                android:gravity="center"
                android:text="@string/personal_change_city_default"
                android:textAppearance="@style/TextAppearance.Title.CityListItem" />

            <ImageView
                android:id="@+id/location_change_avar"
                android:layout_width="@dimen/personal_settings_star_width_small"
                android:layout_height="@dimen/personal_settings_star_height_small"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/category_desc_margin_right"
                android:src="@drawable/avatar_right_click" />
        </LinearLayout>
    </RelativeLayout>

</com.xiaomi.o2o.activity.view.RecommendView>