<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.o2o.activity.view.PersonalTitleView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/personal_title_headview_height"
    android:background="@drawable/personal_settings_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/personal_header_padding_left" >

    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xiaomi_user"
        android:textAppearance="@style/TextAppearance.PersonalHeader.Account" />

    <ImageView
        android:id="@+id/click"
        android:layout_width="@dimen/personal_click_width"
        android:layout_height="@dimen/personal_click_height"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/personal_header_indicator_margin_left"
        android:src="@drawable/personal_settings_clickable" />

</com.xiaomi.o2o.activity.view.PersonalTitleView>