<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/item_detail_part_margin_top"
    android:background="@drawable/choose_content_border"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_desc_title_height"
        android:paddingLeft="@dimen/personal_settings_padding_left" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/itemdetail"
            android:textAppearance="@style/TextAppearance.Title" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/item_divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_desc_title_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/title"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="54"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/personal_settings_padding_left"
            android:singleLine="true"
            android:text="@string/item_loading"
            android:textAppearance="@style/TextAppearance.Title" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/item_divider_line" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="@dimen/personal_settings_padding_left" >

            <TextView
                android:id="@id/currentprice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/item_detail_currentprice_bottom"
                android:gravity="bottom"
                android:text="@string/item_loading"
                android:textAppearance="@style/TextAppearance.Price"
                android:textSize="@dimen/item_detail_currentprice_size" />

            <TextView
                android:id="@id/pricemoney"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/item_detail_upper_padding_bottom"
                android:gravity="bottom"
                android:text="@string/money"
                android:textAppearance="@style/TextAppearance.Title.DetailSecondary.NoAntiColor" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/item_divider_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/item_detail_padding_top"
        android:paddingLeft="@dimen/personal_settings_padding_left"
        android:paddingTop="@dimen/item_detail_padding_top" >

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="@string/item_loading"
            android:textAppearance="@style/TextAppearance.Title.DetailSecondary.NoAntiColor" />
    </RelativeLayout>

</LinearLayout>