<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/source_info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:layout_marginTop="@dimen/express_inquiry_source_info_margin_top"
    android:orientation="horizontal"
    android:visibility="gone">

    <TextView
        android:id="@+id/source_name_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/express_inquiry_data_owner_prefix"
        android:textSize="@dimen/express_inquiry_provider_name_size" />

    <ImageView
        android:layout_margin="@dimen/express_inquiry_provider_icon_margin"
        android:id="@+id/icon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/source_name_suffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/express_inquiry_data_owner_suffix"
        android:textSize="@dimen/express_inquiry_provider_name_size" />
</LinearLayout>