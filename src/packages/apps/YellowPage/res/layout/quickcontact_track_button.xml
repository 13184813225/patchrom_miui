<?xml version="1.0" encoding="utf-8"?>

<com.miui.yellowpage.widget.CheckableImageView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/qcb_selected_tab_bg">

    <TextView
        android:id="@+id/label"
        style="@style/QcbTabText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:clickable="false"
        android:ellipsize="end"
        android:focusable="false"
        android:singleLine="true" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/qcb_detail_vertical_divider_vertical_margin"
        android:layout_marginTop="@dimen/qcb_detail_vertical_divider_vertical_margin"
        android:background="?android:attr/dividerVertical" />

</com.miui.yellowpage.widget.CheckableImageView>