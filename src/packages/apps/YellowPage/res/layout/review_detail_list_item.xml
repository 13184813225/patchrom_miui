<?xml version="1.0" encoding="utf-8"?>
<com.miui.yellowpage.ui.ReviewDetailListItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/list_item_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/extended_data_list_item_margin_vertical"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        style="@miui:style/V5.TextAppearance.List.Primary"
        android:textStyle="normal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/detail" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/extended_data_list_item_margin_vertical"
        android:layout_marginTop="4dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RatingBar
            android:progressDrawable="@drawable/review_rating"
            android:indeterminateDrawable="@drawable/review_rating"
            android:maxHeight="@dimen/review_rating_bar_size"
            android:minHeight="@dimen/review_rating_bar_size"
            style="@miui:style/V5.Widget.RatingBar.Small"
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@miui:style/V5.TextAppearance.List.Secondary"
            android:textStyle="normal"
            android:layout_marginLeft="4dip"
            android:text="@string/review_nickname_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@miui:style/V5.TextAppearance.List.Secondary"
            android:textStyle="normal"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</com.miui.yellowpage.ui.ReviewDetailListItem>
