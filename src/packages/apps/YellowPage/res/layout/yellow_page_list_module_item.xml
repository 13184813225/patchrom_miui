<?xml version="1.0" encoding="utf-8"?>
<com.miui.yellowpage.ui.YellowPageListModuleItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/primary_action_view"
        android:layout_height="@miui:dimen/v5_list_view_double_line_height"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/yellow_page_detail_list_item_padding_vertical"
        android:paddingTop="@dimen/yellow_page_detail_list_item_padding_vertical"
        android:paddingRight="@dimen/yellow_page_detail_list_item_padding_horizontal"
        android:background="@drawable/list_item_bg">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_gravity="center_vertical"
                style="@style/YellowPageListItemTextAppearancePrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/badge"
                android:layout_marginLeft="3dip"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/sub_title"
            style="@style/YellowPageListItemTextAppearanceSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>

    <ImageView
        android:id="@+id/action_button"
        android:layout_height="@dimen/yellow_page_module_action_icon_size"
        android:layout_width="@dimen/yellow_page_module_action_icon_size"
        android:layout_marginRight="@dimen/yellow_page_list_item_secondary_action_padding_right"
        android:layout_gravity="right|center_vertical"
        android:duplicateParentState="false"
        android:adjustViewBounds="true"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/action_button_menu"
        android:layout_height="@dimen/yellow_page_module_action_icon_size"
        android:layout_width="@dimen/yellow_page_module_action_icon_size"
        android:layout_marginRight="@dimen/yellow_page_more_numbers_item_padding_right"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/action_icon_mipub_menu"
        android:scaleType="centerInside"
        android:duplicateParentState="false" />
</com.miui.yellowpage.ui.YellowPageListModuleItem>