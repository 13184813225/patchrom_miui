<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:orientation="vertical" >

    <!-- Order Info -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/ExpressOrderDetailLabelAppearance"
            android:text="@string/express_order_info" />

        <TextView
            style="@style/ExpressOrderDetailLabelAppearance"
            android:text="@string/colon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/ExpressOrderDetailContentAppearance"
            android:text="@string/express_order_internal_id" />

        <TextView
            style="@style/ExpressOrderDetailContentAppearance"
            android:text="@string/colon" />

        <TextView
            android:id="@+id/express_order_id"
            style="@style/ExpressOrderDetailContentAppearance" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/ExpressOrderDetailContentAppearance"
            android:text="@string/express_order_created_time" />

        <TextView
            style="@style/ExpressOrderDetailContentAppearance"
            android:text="@string/colon" />

        <TextView
            android:id="@+id/express_order_create_time"
            style="@style/ExpressOrderDetailContentAppearance" />
    </LinearLayout>

    <!-- Sender Info -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sender_label"
            style="@style/ExpressOrderDetailLabelAppearance"
            android:text="@string/express_contact_label" />

        <TextView
            style="@style/ExpressOrderDetailLabelAppearance"
            android:text="@string/colon" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/sender_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/sender_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/phone"
                style="@style/ExpressOrderDetailContentAppearance" />

            <TextView
                android:id="@+id/sender_address"
                style="@style/ExpressOrderDetailContentAppearance" />
        </LinearLayout>

        <TextView
            android:id="@+id/sender_placeholder"
            style="@style/ExpressOrderDetailContentAppearance"
            android:text="@string/express_field_empty" />
    </FrameLayout>

    <!-- Addressee info -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/addressee_label"
            style="@style/ExpressOrderDetailLabelAppearance"
            android:text="@string/express_dest_city_label" />

        <TextView
            style="@style/ExpressOrderDetailLabelAppearance"
            android:text="@string/colon" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/addressee_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/addressee"
            style="@style/ExpressOrderDetailContentAppearance" />

        <TextView
            android:id="@+id/addressee_placeholder"
            style="@style/ExpressOrderDetailContentAppearance"
            android:text="@string/express_field_empty" />
    </FrameLayout>

</LinearLayout>