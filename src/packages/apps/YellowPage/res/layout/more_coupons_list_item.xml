<?xml version="1.0" encoding="utf-8"?>
<com.miui.yellowpage.ui.MoreCouponsListItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingRight="0dip"
    android:layout_width="match_parent"
    android:background="@drawable/list_item_bg"
    android:layout_height="@miui:dimen/v5_list_view_single_line_height">

    <TextView
        android:text="@string/more_coupons"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        style="@style/YellowPageListItemTextAppearancePrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        style="@miui:style/V5.TextAppearance.List.Secondary"
        android:layout_toLeftOf="@+id/arrow"
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/arrow"
        android:src="@miui:drawable/v5_arrow_right"
        android:layout_width="@dimen/yellow_page_module_action_icon_size"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/yellow_page_detail_action_icon_right_margin"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:duplicateParentState="false"
        android:adjustViewBounds="true"
        android:scaleType="center" />

</com.miui.yellowpage.ui.MoreCouponsListItem>
