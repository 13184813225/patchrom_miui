<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:overScrollMode="never" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/express_confirm_padding_horizontal"
            android:paddingRight="@dimen/express_confirm_padding_horizontal" >

            <ImageView
                android:id="@+id/company_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/express_confirm_company_logo_margin_bottom"
                android:layout_marginTop="@dimen/express_confirm_company_info_margin_top" />

            <TextView
                android:id="@+id/company"
                android:textAppearance="@miui:style/V5.TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/express_confirm_company_info_margin_bottom" />

            <ImageView style="@style/SendExpressConfirmDivider" />

            <TextView
                style="@style/SendExpressConfirmLabel"
                android:text="@string/express_contact_label" />

            <TextView
                android:id="@+id/number"
                android:textAppearance="@miui:style/V5.TextAppearance.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/express_confirm_phone_margin_top"
                android:textSize="@dimen/express_confirm_phone_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/src_city"
                android:textAppearance="@miui:style/V5.TextAppearance.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false" />

            <ImageView style="@style/SendExpressConfirmDivider" />

            <TextView
                style="@style/SendExpressConfirmLabel"
                android:text="@string/express_dest_city_label" />

            <TextView
                android:id="@+id/dest_city"
                android:textAppearance="@miui:style/V5.TextAppearance.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/express_confirm_dest_margin_top"
                android:singleLine="false" />

            <ImageView style="@style/SendExpressConfirmDivider" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/submit"
        style="@style/ExpressPositiveWarn"
        android:text="@string/express_submit_order" />

</LinearLayout>