<?xml version="1.0" encoding="utf-8"?>
<com.android.phone.OldmanIncallAnswerWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical" 
        android:gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true" >

        <Button 
            android:id="@+id/oldman_answer_call_button"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="@string/oldman_answer_call_button_text" 
            android:textSize="@dimen/oldman_common_button_text_size"
            android:textColor="@color/oldman_common_text_color"
            android:background="@drawable/oldman_answer_call_button_bg" />
        
        <Button 
            android:id="@+id/oldman_reject_call_button"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="@string/oldman_reject_call_button_text" 
            android:textSize="@dimen/oldman_common_button_text_size"
            android:textColor="@color/oldman_common_text_color"
            android:background="@drawable/oldman_reject_call_button_bg" />
        
    </LinearLayout>

</com.android.phone.OldmanIncallAnswerWidget>

