<?xml version="1.0" encoding="utf-8"?>
<com.miui.ivr.ui.NonIvrMenuListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/non_ivr_menu_icon_width"
        android:layout_height="@dimen/non_ivr_menu_icon_height"
        android:layout_marginBottom="7dip" />

    <TextView
        android:id="@+id/name"
        style="@miui:style/V5.TextAppearance.Medium.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@miui:dimen/v5_text_font_size_small" />

    <TextView
        android:id="@+id/price"
        style="@miui:style/V5.TextAppearance.Medium.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="@miui:dimen/v5_text_font_size_small" />

</com.miui.ivr.ui.NonIvrMenuListItem>