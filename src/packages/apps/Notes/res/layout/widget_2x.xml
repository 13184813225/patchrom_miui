<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="146dip"
    android:layout_height="146dip">

    <ImageView
        android:id="@+id/widget_bg_image"
        android:layout_marginLeft="@dimen/widget_2x2_bg_image_padding"
        android:layout_marginRight="@dimen/widget_2x2_bg_image_padding"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="20dip"
        android:paddingBottom="12dip"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/widget_image"
            android:layout_marginTop="6dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/widget_text"
            android:layout_width="fill_parent"
            android:layout_marginTop="3dip"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:textSize="14sp"
            android:textColor="#FF663300"
            android:maxLines="5"
            android:lineSpacingMultiplier="1.2" />

    </LinearLayout>

</FrameLayout>
