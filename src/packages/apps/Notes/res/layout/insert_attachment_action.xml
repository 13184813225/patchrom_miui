<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/attachment_gallery"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/action_padding_size"
        android:paddingRight="@dimen/action_padding_size"
        android:gravity="center"
        android:drawableTop="@drawable/attach_picture"
        android:text="@string/attachment_gallery" />
    <TextView
        android:id="@+id/attachment_camera"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/action_padding_size"
        android:paddingRight="@dimen/action_padding_size"
        android:gravity="center"
        android:drawableTop="@drawable/attach_photo"
        android:text="@string/attachment_camera" />
    <TextView
        android:id="@+id/attachment_contact"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/action_padding_size"
        android:paddingRight="@dimen/action_padding_size"
        android:gravity="center"
        android:drawableTop="@drawable/attach_contact"
        android:text="@string/attachment_contact" />
</LinearLayout>
