<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/result_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dip"
        android:divider="#30000000"
        >
    </ListView>

    <LinearLayout
        android:id="@+id/act_hot_city_part"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/act_find_city_hot_title"
            style="@style/text_group_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dip"
            android:paddingLeft="12dip"
            android:paddingTop="2dip"
            android:text="@string/act_find_city_hot_title"
            android:background="@miui:drawable/v5_list_view_section_item_bg_light" />


        <GridView
            android:id="@+id/act_find_city_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:verticalSpacing="@dimen/grid_item_offsite"
            android:horizontalSpacing="@dimen/grid_item_offsite"
            android:background="#30000000"
            android:numColumns="3"
            android:scrollbars="none" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_find_city_information_part"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/search_result_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:text="@string/act_weather_find_city_click_retry"
            android:background="@drawable/btn_retry"
            android:textSize="20sp"/>
    </LinearLayout>

</FrameLayout>