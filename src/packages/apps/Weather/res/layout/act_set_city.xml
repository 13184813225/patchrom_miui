<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
>

    <LinearLayout
        android:id="@+id/gps_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_medium_top_item_background_normal"
        android:visibility="gone"
        >

        <ImageButton
            android:id="@+id/gps_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:src="@miui:drawable/v5_btn_inline_delete_normal_light"
            android:visibility="gone"
        />

        <TextView
            android:id="@+id/gps_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/link_city_listview_item_city_name_font_size"
            android:text="@string/act_set_city_find_side_error"
            android:singleLine="true"
            android:textColor="@android:color/black"
        />

         <ImageView
            android:id="@+id/gps_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="0dip"
            android:src="@drawable/cur_local"
        />

         <TextView
            android:id="@+id/gps_city_hint"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:layout_marginRight="10dip"
            android:text="@string/gps_hint"
            android:textColor="#FF888888"
            android:textSize="14sp"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
    >
        <SortableListView
            android:id="@+id/act_set_city_define"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:listSelector="@android:color/transparent"
            android:fadingEdgeLength="0dip"
            android:scrollbars="none"
        />
    </LinearLayout>
</LinearLayout>
