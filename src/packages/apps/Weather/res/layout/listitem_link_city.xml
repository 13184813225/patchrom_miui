<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="0dip"
    android:paddingRight="0dip"
    android:orientation="vertical"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_medium_top_item_background_normal"
    >

         <ImageButton
            android:id="@+id/listitem_link_city_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:src="@miui:drawable/v5_btn_inline_delete_normal_light"
            android:visibility="gone"
        />

        <TextView
            android:id="@+id/listitem_link_city_key"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="left|center_vertical"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/link_city_listview_item_city_name_font_size"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:background="#00000000"
        />
        <ImageButton
            android:id="@+id/listitem_link_city_drog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:gravity="right|center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="6dip"
            android:src="@drawable/drag_handle"
        />
    </LinearLayout>
</LinearLayout>
