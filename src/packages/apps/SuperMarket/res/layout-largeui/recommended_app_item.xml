<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.market.ui.RecommendedAppItem xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.ListView.Item.TrebleLine" >

    <ImageSwitcher
        android:id="@+id/icon"
        style="@style/Widget.Icon" />

    <com.xiaomi.market.ui.ActionButton
        android:id="@+id/action"
        style="@style/Widget.Button.Action"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_padding"
        android:focusable="false"
        android:gravity="center" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon"
        android:layout_toLeftOf="@id/action"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.Title" />

</com.xiaomi.market.ui.RecommendedAppItem>