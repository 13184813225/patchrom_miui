<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/show_all_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@drawable/common_bg" >
        <TextView
            android:id="@+id/show_all_header_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding"
            android:duplicateParentState="true"
            android:text="@string/show_all_local_app"
            android:textAppearance="@style/TextAppearance.Primary" />
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_padding"
            android:background="@drawable/arrow" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@drawable/common_bg" >
        <TextView
            android:id="@+id/update_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding"
            android:textAppearance="@style/TextAppearance.Primary" />
        <Button
            android:id="@+id/update_all"
            style="@style/Button.Action"
            android:layout_width="@dimen/action_button_width_large"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/update_all" />
    </RelativeLayout>
</LinearLayout>