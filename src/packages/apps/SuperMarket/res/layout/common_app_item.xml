<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.market.ui.CommonAppItem xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.ListView.Item.TrebleLine" >

    <ImageSwitcher
        android:id="@+id/icon"
        style="@style/Widget.Icon" />

    <com.xiaomi.market.ui.ActionButton
        android:id="@+id/action"
        style="@style/Widget.Button.Action"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_padding"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/action"
        android:layout_toRightOf="@id/icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_content_inner_margin"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Title" />

        <RatingBar
            android:id="@+id/ratingbar"
            style="@style/Widget.RatingBar.ReadOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_content_inner_margin"
            android:layout_marginLeft="@dimen/rating_bar_left_margin"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_padding_small"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.Title.Secondary" />

            <com.xiaomi.market.widget.SizeView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" />

        </LinearLayout>
    </LinearLayout>

</com.xiaomi.market.ui.CommonAppItem>