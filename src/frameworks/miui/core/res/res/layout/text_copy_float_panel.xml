<?xml version="1.0" encoding="utf-8"?>
<android.webkit.SelectionFloatPanel xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/panel"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/textview_panel_bg">

        <TextView android:id="@+id/buttonCopy"
            style="@style/TextViewFloatPanelButton"
            android:text="@android:string/copy"
            />
        <ImageView android:id="@+id/arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/textview_panel_arrow_down"
            android:visibility="visible" />
    </LinearLayout>
</android.webkit.SelectionFloatPanel>
