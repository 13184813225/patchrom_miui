<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="17.3dp"
              android:orientation="vertical"
              android:paddingLeft="1px"
              android:paddingRight="1px">

    <miui.widget.ScreenView
        android:id="@+id/screen_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
            android:id="@+id/resolver_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true" >
        <CheckBox
            android:id="@+id/always_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dip"
            android:visibility="gone"
            android:text="@string/alwaysUsePrompt"
            android:textAppearance="@miui:style/TextAppearance.List.Secondary" />
        <View
            android:layout_width="match_parent"
            android:layout_height="18dip" />
        </LinearLayout>
    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23.3dp"
        android:layout_marginRight="23.3dp"
        android:text="@android:string/cancel" />
</LinearLayout>
